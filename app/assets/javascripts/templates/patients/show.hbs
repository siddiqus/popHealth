<div class="patient">
  <div class="col-measure-info">
    <h1><i class="fa fa-tasks"></i> Measures</h1>
    <div class="panel-group" id="measures">
      {{#collection measures}}
      <div class="panel panel-default">
        <div class="panel-heading">
            <a class="measure-title" {{#if submeasures}}data-toggle="collapse" data-parent="#measures" href="#m{{id}}"{{else}}href="#measures/{{id}}/patient_results"{{/if}}>
              {{#if submeasures}}<div class="submeasure-expander"><i class="fa fa-plus-square-o"></i></div>{{/if}}
              {{title}}
            </a>
        </div>
        {{#if submeasures}}
        <div id="m{{id}}" class="panel-collapse collapse">
          <div class="panel-body">
            {{#collection submeasures}}
            <a href="#measures/{{../id}}/{{id}}/patient_results" class="btn btn-measure btn-default">
              {{subtitle}}
            </a>
            {{/collection}}
          </div>
        </div>
        {{/if}}
      </div>
      {{/collection}}
    </div>
  </div>

  <div class="col-patient-info">
    <h1 class="patient-heading"><i class="fa fa-user"></i> {{first}} {{last}}</h1>
    <div class="timeline-entry">
      <div class="patient-data-list">
        <dl class="dl-horizontal">
          <dt>PATIENT ID</dt>
          <dd><div class="patient-medical-record-id" title="{{medical_record_number}}">{{medical_record_number}}</div></dd>
          <dt>DOB</dt>
          <dd>{{birthdate}}</dd>
          <dt>GENDER</dt>
          <dd>{{gender}}</dd>
        </dl>
        <dl class="dl-horizontal">
          <dt>RACE</dt>
          <dd>{{race}}</dd>
          <dt>ETHNICITY</dt>
          <dd>{{ethnicity}}</dd>
          <dt>LANGUAGES</dt>
          <dd>{{languages}}</dd>
          <dt>PROVIDERS</dt>
          <dd>{{provider}}</dd>
        </dl>
      </div>
    </div>

    <div class="timeline-entry row-inline span btn-group"> 
      <div class="btn span pull-left measure-relative-btn">
        <h4>Patient History Relative to Measures</h4>
      </div>
      <div class="btn span pull-right clinical-summary-btn">
        <h4>Clinical Summary</h4>
      </div> 
    </div>

